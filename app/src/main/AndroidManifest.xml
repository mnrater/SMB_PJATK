<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.app_bs_service">
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-feature android:name="android.hardware.type.watch" />
    <uses-permission android:name="com.example.projekt1_smb2.MY_PERMISSION"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App_bs_service">

        <service
            android:name=".ProductService"
            android:enabled="true"
            android:exported="true"/>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".ProductReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="com.example.projekt1_smb2.MY_PERMISSION">
            <intent-filter>
                <action android:name="com.example.projekt1_smb2.MY_BROADCAST" />
            </intent-filter>
        </receiver>
    </application>

</manifest>